{
  "name": "rainbow-board",
  "productName": "Rainbow Board",
  "description": "Cross-platform Whiteboard app made using React, Electron, GPU.js and GPU.js Real Renderer!",
  "version": "0.1.4",
  "main": "public/electron.js",
  "homepage": ".",
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "scripts": {
    "start": "concurrently 'BROWSER=none react-scripts start' 'wait-on tcp:3000 && electron-forge start'",
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "package": "electron-forge package",
    "make": "yarn build && electron-forge make"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-wix": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "concurrently": "^5.3.0",
    "electron": "^10.1.5",
    "gh-pages": "^3.1.0",
    "gpu.js": "^2.10.4",
    "gpujs-real-renderer": "^0.4.1",
    "material-icons": "^0.3.1",
    "materialize-css": "^1.0.0",
    "react": "^17.0.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "semver": "^7.3.2",
    "wait-on": "^5.2.0",
    "web-vitals": "^0.2.4"
  },
  "config": {
    "forge": "./forge.config.js"
  }
}
