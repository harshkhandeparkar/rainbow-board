{
  "name": "rainbow-board",
  "version": "0.5.4",
  "productName": "Rainbow Board",
  "author": {
    "name": "Harsh Khandeparkar"
  },
  "repository": "https://github.com/HarshKhandeparkar/rainbow-board",
  "description": "Cross-platform Whiteboard app made using React, Electron, SVG Real Renderer!",
  "discordInvite": "https://discord.gg/FEpMS43UwR",
  "main": "public/electron.js",
  "website": "https://harshkhandeparkar.github.io/rainbow-board",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-settings": "^4.0.2"
  },
  "scripts": {
    "start": "webpack --mode development && electron .",
    "build": "webpack --mode production",
    "package": "electron-forge package",
    "make": "yarn build && electron-forge make",
    "pack": "electron-builder --dir",
    "dist": "yarn build && electron-builder",
    "ship": "yarn build && electron-forge make && electron-builder",
    "ebuild": "yarn build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-react-display-name": "^7.12.13",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-react": "^7.12.13",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.0.0",
    "css-loader": "^5.2.0",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "material-icons": "^0.5.4",
    "materialize-css": "^1.0.0",
    "pngjs": "^6.0.0",
    "react": "^17.0.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "semver": "^7.3.2",
    "style-loader": "^2.0.0",
    "svg-real-renderer": "^0.1.9",
    "svgsaver": "^0.9.0",
    "wait-on": "^5.2.0",
    "web-vitals": "^1.1.1",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "build": {
    "appId": "rainbow.board",
    "productName": "Rainbow Board",
    "directories": {
      "output": "out",
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "public/*"
    ],
    "win": {
      "icon": "public/logo512.png",
      "publisherName": "Harsh Khandeparkar"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "executableName": "rainbow-board",
      "icon": "public/logo512.png",
      "category": "Utility"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "public/logo512.png"
    },
    "publish": {
      "provider": "github",
      "releaseType": "prerelease"
    }
  }
}
